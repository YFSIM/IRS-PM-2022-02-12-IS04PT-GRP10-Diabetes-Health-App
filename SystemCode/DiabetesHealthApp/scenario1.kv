#:import hex kivy.utils.get_color_from_hex
<scenario1_Layout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height*(0.8)
		pos: root.width*(1-1)/2, root.height*(0.2)
		
		canvas:
            Color: 
                rgba: hex('#40A698')
            Rectangle:
                size: self.size
                pos: self.pos 
				
		Label:
			id: welcome_label
			text: "Risk Calculator"
			size: root.width*0.8, root.height*0.1
			
		BoxLayout:
			orientation: "horizontal"
			Label:
				id: scenario1_sex_label
				size_hint: (0.4,1)
				text: "Sex: "
			Label:
				id: scenario1_sex_label-MALE
				size_hint: (0.2,1)
				size: root.width*0.2, root.height
				text: "MALE"
			Switch:
				id: scenario1_sex_switch
				size_hint: (0.2,1)
				size: root.width*0.2, root.height
				active: True
				on_active: root.switch_clicked(self, self.active)
				canvas:
					Color:
						rgb: 1,1,1
					Rectangle:
						source: 'images/switch.png'        # make or download your background jpg
						size: sp(83), sp(32)
						pos: int(self.center_x - sp(41)), int(self.center_y - sp(16))
					Rectangle:
						source: 'images/switch_slider.png' # make or download your slider jpg
						size: sp(43), sp(32)
						pos: int(self.center_x - sp(41) + self.active_norm_pos * sp(41)), int(self.center_y - sp(16))
			Label:
				id: scenario1_sex_label-FEMALE
				size_hint: (0.2,1)
				size: root.width*0.2, root.height
				text: "FEMALE"
		
